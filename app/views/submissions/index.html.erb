<h1><%= @form.name %> Submission</h1>

<div class="row">
  <div class="col-md-6">
    <h2>
      Submissions
      <span class="badge">
        <%= @submissions.count %>
      </span>
    </h2>
  </div>
  <div class="col-md-6 text-right">
    <%= link_to "Export to CSV", polymorphic_path([@form, :submissions], format: :csv) %>

    <%= link_to "View Trash", [:trash, @form] %>
  </div>
</div>

<hr>

<% if @submissions.any? %>
  <%= render @submissions %>
<% else %>
  <p>No submission for this form.</p>
<% end %>
