<%= simple_form_for(@form) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :redirect %>
  <%= f.input :email %>
  <%= f.input :webhook %>
  <%= f.input :disallow_urls, hint: "Donâ€™t allow URLs to be submitted through form (spam protection)" %>

  <%= f.button :submit %>

  <% if @form.persisted? %>
    <%= link_to "Cancel", @form %>
  <% else %>
    <%= link_to "Cancel", forms_path %>
  <% end %>
<% end %>
