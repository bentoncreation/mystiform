<div class="row">
  <div class="col-md-6">
    <h1>Editing Form</h1>
  </div>
  <div class="col-md-6 text-right">
    <% if can?(:destroy, @form) %>
      <%= link_to @form,
                  method: :delete,
                  data: { confirm: "Are you sure you want to delete this form?" },
                  class: "btn btn-danger btn-sm" do %>
        <i class="fa fa-minus-circle"></i>
        Delete Form
      <% end %>
    <% end %>
  </div>
</div>

<%= render "form" %>
