<h1><%= @form.name %> Trash</h1>

<div class="row">
  <div class="col-md-6">
    <h2>
      Deleted Submissions
      <span class="badge">
        <%= @submissions.count %>
      </span>
    </h2>
  </div>
  <div class="col-md-6 text-right">
    <%= link_to "Back to Form", @form %>
  </div>
</div>

<hr>

<% if @submissions.any? %>
  <%= render @submissions %>

  <%= paginate @submissions %>
<% else %>
  <p>No submission for this form.</p>
<% end %>
